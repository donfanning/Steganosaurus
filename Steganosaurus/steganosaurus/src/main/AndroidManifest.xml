<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="steganosaurus">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="app.steganosaurus.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.steganosaurus.EncryptActivity"
            android:label="@string/title_activity_encrypt"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="app.steganosaurus.DecryptActivity"
            android:label="@string/title_activity_decrypt"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="app.steganosaurus.OptionsActivity"
            android:label="@string/title_activity_options"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
