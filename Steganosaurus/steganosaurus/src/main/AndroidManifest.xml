<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="steganosaurus">

    <application
        android:icon="@drawable/logo_steganosaurus_48"
        android:allowBackup="true"
        android:debuggable="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="app.steganosaurus.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.steganosaurus.EncryptActivity"
            android:label="@string/title_activity_encrypt"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="app.steganosaurus.DecryptActivity"
            android:label="@string/title_activity_decrypt"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
