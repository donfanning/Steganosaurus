<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.steganosaurus.MainMenu"
    android:background="#ffffff"
    android:padding="0dp">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:text="@string/app_name"
        android:background="#04e499"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:theme="@style/Theme.AppCompat.Light"
        android:gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentTop="true" />


        <ImageView
            android:id="@+id/main_menu_logo"
            android:contentDescription="@string/logo_description"
            android:layout_width="260dp"
            android:layout_height="170dp"
            android:layout_below="@+id/main_title"
            android:layout_centerHorizontal="true"
            android:src="@drawable/stegosaurus_black"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.5" />


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        android:gravity="bottom"
        android:layout_below="@+id/main_menu_logo"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/hide_secrets"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/encrypt_button_text"
                android:clickable="false"
                android:textSize="20sp"
                android:textColor="#2e2e2e"
                android:textStyle="bold"
                android:onClick="encrypt" />

            <Button
                android:id="@+id/show_secrets"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/decrypt_button_text"
                android:clickable="false"
                android:textSize="20sp"
                android:textColor="#2E2E2E"
                android:textStyle="bold"
                android:onClick="decrypt"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/share_secrets"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Share secrets"
                android:clickable="false"
                android:textSize="20sp"
                android:textColor="#2E2E2E"
                android:textStyle="bold"
                android:onClick="share"/>

            <Button
                android:id="@+id/secret_options"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Secret options"
                android:clickable="false"
                android:textSize="20sp"
                android:textColor="#2E2E2E"
                android:textStyle="bold"
                android:onClick="showOptions"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>
